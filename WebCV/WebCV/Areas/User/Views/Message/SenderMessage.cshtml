@model IEnumerable<EntityLayer.Concreate.Message>

@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@if (Model.Count() > 0)
{
    <table class="table-bordered" style="margin:20px">
        <tr>
            <td>Id</td>
            <td>Gönderilen</td>
            <td>Başlık</td>
            <td>Tarih</td>
            <td>Sil</td>
            <td>Detay</td>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.MessageId</td>
                <td>@x.Recever</td>
                <td>@x.MessageSubject</td>
                <td>@x.MessageDateTime.ToString("dd-MM-yyyy")</td>
                <td>
                    <a href="/User/Message/DeleteMessageSender/@x.MessageId" class="btn btn-outline-danger">Sil</a>
                </td>
                <td>
                    <a href="/User/Message/MessageDetail/@x.MessageId" class="btn btn-outline-primary">Detay</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h2>Gönderilen Mesaj Yoktur</h2>
}

<a href="/User/Message/AddMessage" class="btn btn-outline-info">Mesaj Gönder</a>

