@model IEnumerable<EntityLayer.Concreate.Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}






@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.AnnouncementId</td>
                <td>
                    @x.AnnouncementTitle
                </td>
                <td>@x.AnnouncementSubject</td>
                <td>
                    <a href="/Admin/Announcemnt/DeleteAnnouncement/@x.AnnouncementId" class="btn btn-outline-danger">Sil</a>
                </td>
                <td>
                    <a href="/Admin/Announcemnt/UpdateAnnouncemnt/@x.AnnouncementId" class="btn btn-outline-warning">Güncelle</a>
                </td>

            </tr>
        }
    </table>
}
else
{
    <h2>Gösterilcek bir duyuru yok</h2>
}

<a href="/Admin/Announcemnt/AddAnnouncement" class="btn btn-outline-primary">Ekle</a>



