@model IEnumerable<EntityLayer.Concreate.About>

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<div class="section pt-4 px-3 px-lg-4" id="about">

    <div class="container-narrow">
        <div class="row">
            <div class="col-md-6">
                @foreach(var x in Model)
                {
                    <h2 class="h4 my-2">@x.AboutHeader</h2>
                <p>@x.AboutDescription</p>
                <div class="row mt-3">
                    <div class="col-sm-2">
                        <div class="pb-1">Yaş:</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@x.AboutAge</div>
                    </div>
                    <div class="col-sm-2">
                        <div class="pb-1">mail:</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@x.AboutMail</div>
                    </div>

                    <div class="col-sm-2">
                        <div class="pb-1">Telefon:</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@x.AboutPhone</div>
                    </div>
                    <div class="col-sm-2">
                        <div class="pb-1">Adres</div>
                    </div>
                    <div class="col-sm-10">
                        <div class="pb-1 fw-bolder">@x.AboutAddress</div>
                    </div>
                </div>
                }
            </div>
            @foreach(var x in Model)
            {
                <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="@x.AboutImageURL" width="300" height="300" alt="Selim Alp Kamil" /></div>
            }
        </div>
    </div>

</div>