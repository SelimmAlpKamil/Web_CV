@model IEnumerable<EntityLayer.Concreate.Feature>

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<header>
    <div class="cover bg-light">
        <div class="container px-3">
            <div class="row">
                <div class="col-lg-6 p-2"><img class="img-fluid" src="~/Template/images/illustrations/hello3.svg" alt="hello" /></div>
                <div class="col-lg-6">
                    <div class="mt-5">
                        @foreach(var x in Model)
                        {
                            <p class="lead text-uppercase mb-1">@x.FeatureHeader</p>
                            <h1 class="intro-title marker" data-aos="fade-left" data-aos-delay="50">Ben @x.FeatureName</h1>
                            <p class="lead fw-normal mt-3" data-aos="fade-up" data-aos-delay="100">@x.FeatureTitle</p>
                        }

                        @await Component.InvokeAsync("SocialMedia")

                        <div class="mt-3" data-aos="fade-up" data-aos-delay="200"><a class="btn btn-primary shadow-sm mt-1 hover-effect" href="#contact">Hemen İletişime Geç <i class="fas fa-arrow-right"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="wave-bg"></div>
</header>